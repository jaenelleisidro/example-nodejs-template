{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir":"./../"
    },
    "include": [
        "index.ts",
        "app/*.ts",
        "app/**/*.ts",
        "app/**/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}